<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/FontSampleSeekBar"
            android:id="@+id/textViewSampleText"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="82dp" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBarFontSize"
            android:layout_below="@+id/textViewSampleText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:progress="10"
            android:max="20" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok_text"
            android:id="@+id/btnOkChangeFontSize"
            android:layout_below="@+id/seekBarFontSize"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="39dp"
            android:nestedScrollingEnabled="true" />
    </RelativeLayout>
</LinearLayout>